@model Actor

@{
    ViewData["Title"] = "Update an actor";
}

<div>
    <div class="col-md-4 offset-4">
        <p>
            <h1>
                Update an actor
            </h1>
        </p>
        <div class="row-md-4">
            <div>
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row justify-content-center">
                        <img class="border-info rounded-circle" style="max-width: 150px;" id="ProfilePicturePreview" />
                    </div>
                    <div class="">
                        <label asp-for="ProfilePictureURL" class="form-label"></label>
                        <input asp-for="ProfilePictureURL" class="form-control" />
                        <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="FullName" class="form-label"></label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Bio" class="form-label"></label>
                        <input asp-for="Bio" class="form-control" />
                        <span asp-validation-for="Bio" class="text-danger"></span>
                    </div>

                    <div>
                        <input type="submit" value="Update" class="btn btn-outline-success float-right" style="margin: 10px 0 0 0;" />
                        <a class="btn btn-outline-secondary float-right" asp-action="Index" style="margin: 10px 0 0 0;">Show</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>

        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ProfilePictureURL").val();
        })

        $("#ProfilePictureURL").on("change", function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(this).val();
        })
    </script>
}
